# ============================================================================
# AstraGuard-AI Environment Configuration
# ============================================================================
# Copy this file to .env and update values for your environment
# cp .env.example .env

# ============================================================================
# Application Configuration
# ============================================================================
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
STREAMLIT_PORT=8501

# ============================================================================
# Monitoring & Observability
# ============================================================================
LOG_LEVEL=DEBUG
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION=7d

# ============================================================================
# Python Configuration
# ============================================================================
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ============================================================================
# Optional: Azure Configuration (for production deployment)
# ============================================================================
# AZURE_RESOURCE_GROUP=astraguard-rg
# AZURE_CONTAINER_REGISTRY=astraguardregistry
# AZURE_STORAGE_ACCOUNT=astraguardstorage

# ============================================================================
# Optional: Machine Learning Configuration
# ============================================================================
# MODEL_PATH=/models
# BATCH_SIZE=32
# MAX_WORKERS=4

# ============================================================================
# Optional: Security Configuration (for production)
# ============================================================================
# API_KEY=your-api-key-here
# JWT_SECRET=your-jwt-secret-here
# CORS_ORIGINS=https://yourdomain.com
